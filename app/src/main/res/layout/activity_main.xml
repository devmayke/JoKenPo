<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="pedra"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/APP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imagemResultado"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/voce"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/padrao" />

    <ImageView
        android:id="@+id/pedra"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:onClick="pedra"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultado"
        app:srcCompat="@drawable/pedra" />

    <ImageView
        android:id="@+id/tesoura"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:onClick="papel"
        app:layout_constraintEnd_toStartOf="@+id/imageView4"
        app:layout_constraintStart_toEndOf="@+id/pedra"
        app:layout_constraintTop_toBottomOf="@+id/resultado"
        app:srcCompat="@drawable/papel" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:onClick="tesoura"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultado"
        app:srcCompat="@drawable/tesoura" />

    <TextView
        android:id="@+id/resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:text="Escolha uma opção abaixo"
        android:textColor="#A6A6A6"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/voce" />

    <ImageView
        android:id="@+id/voce"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imagemResultado"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:srcCompat="@drawable/padrao" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="App"
        android:textColor="#A6A6A6"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/imagemResultado"
        app:layout_constraintStart_toStartOf="@+id/imagemResultado"
        app:layout_constraintTop_toBottomOf="@+id/APP" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Você"
        android:textColor="#A6A6A6"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/voce"
        app:layout_constraintStart_toStartOf="@+id/voce"
        app:layout_constraintTop_toBottomOf="@+id/APP" />

    <TextView
        android:id="@+id/textoApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="#A6A6A6"
        app:layout_constraintEnd_toEndOf="@+id/imagemResultado"
        app:layout_constraintStart_toStartOf="@+id/imagemResultado"
        app:layout_constraintTop_toBottomOf="@+id/imagemResultado" />

    <TextView
        android:id="@+id/textoVoce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="#A6A6A6"
        app:layout_constraintEnd_toEndOf="@+id/voce"
        app:layout_constraintStart_toStartOf="@+id/voce"
        app:layout_constraintTop_toBottomOf="@+id/voce" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:textColor="#86C30505"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/voce"
        app:layout_constraintEnd_toStartOf="@+id/voce"
        app:layout_constraintStart_toEndOf="@+id/imagemResultado"
        app:layout_constraintTop_toTopOf="@+id/voce" />
</androidx.constraintlayout.widget.ConstraintLayout>